<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_tint"
    android:padding="@dimen/p_padding3">

    <TextView
        android:id="@+id/desc_url_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/p_padding1"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alata"
        android:text="Enter The Url"
        android:textColor="@color/txt1"
        android:textSize="@dimen/text4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/url_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/p_padding3"
        android:autoText="false"
        android:fadeScrollbars="true"
        android:fontFamily="@font/alata"
        android:isScrollContainer="false"
        android:maxHeight="410dp"
        android:maxLines="12"
        android:minHeight="48dp"
        android:minLines="1"
        android:padding="@dimen/text2"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="none"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColor="@color/txt1"
        android:textSize="@dimen/text4"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/url_input_done_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_url_text" />

    <Button
        android:id="@+id/url_input_done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/p_padding3"
        android:background="@color/background_tint_dark"
        android:fontFamily="@font/alata"
        android:padding="@dimen/p_padding5"
        android:text="DONE"
        android:textColor="@color/txt1"
        android:textColorHighlight="@color/background_tint"
        android:textColorLink="@color/background_tint"
        android:textSize="@dimen/text3"
        app:iconTint="@color/background_tint"
        app:layout_constraintBottom_toTopOf="@+id/url_input_cancel_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/url_input_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/p_padding3"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/alata"
        android:background="@color/background_tint_dark"
        android:padding="@dimen/p_padding5"
        android:text="CANCEL"
        android:textSize="@dimen/text3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>