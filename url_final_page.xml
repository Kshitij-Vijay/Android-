        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/url_final_refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_marginTop="@dimen/p_padding3"
            android:layout_marginBottom="@dimen/p_padding3"
            android:background="@drawable/shapes"
            android:padding="@dimen/p_padding2">

            <TextView
                android:id="@+id/url_final_refresh_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/p_padding2"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/alata"
                android:padding="@dimen/p_padding4"
                android:text="Refresh : "
                android:textColor="@color/txt1"
                android:textSize="@dimen/text4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/url_final_refresh_custom_frequencyInput"
                android:layout_width="147dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/alata"
                android:hint="hrs"
                android:inputType="number|numberSigned"
                android:minHeight="48dp"
                android:textColor="@color/txt1"
                android:textColorHint="@color/txt1"
                android:textSize="@dimen/text2"
                app:layout_constraintBottom_toBottomOf="@+id/ulr_final_refresh_custom_freq_textView"
