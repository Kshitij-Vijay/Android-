                android:minWidth="48dp"
                android:padding="@dimen/p_padding3"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:textSize="@dimen/text3"
                app:layout_constraintBottom_toBottomOf="@+id/url_final_notifs_increase_TextView"
                app:layout_constraintStart_toEndOf="@+id/url_final_notifs_increase_TextView"
                app:layout_constraintTop_toTopOf="@+id/url_final_notifs_increase_TextView" />

            <TextView
                android:id="@+id/url_final_notifs_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/alata"
                android:padding="@dimen/p_padding3"
                android:text="Notifications : "
                android:textColor="@color/txt1"
                android:textSize="@dimen/text5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/url_final_notifs_increase_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/alata"
                android:padding="@dimen/p_padding3"
                android:text="Increase in Price : "
                android:textColor="@color/txt2"
                android:textSize="@dimen/text3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/url_final_notifs_textView" />

            <TextView
                android:id="@+id/url_final_notifs_decrease_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/alata"
                android:padding="@dimen/p_padding3"
                android:text="Decrease in Price :"
                android:textColor="@color/txt2"
                android:textSize="@dimen/text3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/url_final_notifs_increase_TextView" />

            <Switch
                android:id="@+id/url_final_notifSwitch"
                android:layout_width="69dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="@+id/url_final_notifs_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.524"
                app:layout_constraintStart_toEndOf="@+id/url_final_notifs_textView"
                app:layout_constraintTop_toTopOf="@+id/url_final_notifs_textView" />

