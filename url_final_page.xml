        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/url_final_name_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/p_textView_height"
            android:layout_marginTop="@dimen/p_padding5"
            android:layout_marginEnd="@dimen/p_padding5"
            android:fontFamily="@font/alata"
            android:hint="Name"
            android:padding="@dimen/p_padding2"
            android:textColor="@color/txt1"
            android:textColorHint="@color/txt1"
            android:textSize="@dimen/text3" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/url_final_desc_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/p_textView_height"
            android:layout_marginTop="@dimen/p_padding5"
            android:layout_marginEnd="@dimen/p_padding5"
            android:fontFamily="@font/alata"
            android:hint="Description"
            android:padding="@dimen/p_padding2"
            android:textColor="@color/txt1"
            android:textColorHint="@color/txt1"
            android:textSize="@dimen/text3" />

